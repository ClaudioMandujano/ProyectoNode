  <div class="col-md-4 mt-4 mt-sm-0 container fluid">
        <h2>Contactanos</h2>
          <form method="POST" action="/contacto" class="flex-column flex-md-row">
              <div class="form-row">
                <div class="form-group col-md-6">
                      <label for="nombre">Nombre</label>
                      <input type="text" class="form-control" id="nombre" name="nombre" required> 
                  </div>
                <div class="form-group col-md-6">
                    <label for="apellido">Apellido</label>
                    <input type="text" class="form-control" id="apellido" name="apellido" required>
                </div>
                <div class="row">
                <div class="form-group col-md-6">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="mail" name="email" placeholder="..." required>
                </div> 
                <div class="form-group col-md-6">
                  <label for="tel">Tel</label>
                  <input type="text" class="form-control" id="tel"  name="telefono" placeholder="..." required>
                </div>
                <div class="form-group col-lg-12">
                  <label for="mensaje">Mensaje</label>
                  <textarea class="form-control" id="mensaje" name="mensaje" rows="4"></textarea>
                </div>
              </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
               
              </div>
          </form>
         <p>{{message}}</p> 
     </div> 